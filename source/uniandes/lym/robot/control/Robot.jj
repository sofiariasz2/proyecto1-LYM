void conditional(Console sistema, String procName):
{
  boolean bool;
  int numNot=0;
  boolean ejecutableIf=true;
  boolean ejecutableThen=false;
}
{
    <IF> numNot=notCondition() bool=conditions()
    	{
    	  if (numNot%2!=0)
    	  	bool=!bool;
    	  if (bool)
    		{ ejecutableIf= true;
			ejecutableThen=false;
			}
		else
			{ ejecutableIf=false;
			ejecutableThen=true;
			}
    	}
    <THEN> "[" ( interna(sistema, ejecutableIf, 1, procName) )* "]" (<ELSE> "[" (interna(sistema, ejecutableThen, 1, procName))* "]")?
    
}

void loop(Console sistema, String procName):
{
    boolean bool;
    int numNot = 0;
    boolean ejecutable;
    int repeticiones;
}
{
    // WHILE LOOP
    <WHILE> numNot = notCondition() bool = conditions()
    {
        if (numNot % 2 != 0) {
            bool = !bool;
        }
        ejecutable = bool;
    }
    <DO> "[" 
        { 
            while (ejecutable) {
                if (!interna(sistema, true, 1, procName)) break; // Control de ejecuci√≥n
                ejecutable = conditions(); // Reevaluar condici√≥n en cada iteraci√≥n
            }
        } 
        ( <BREAK> "." { return; } | <CONTINUE> "." { continue; } )*
    "]"

    | 
    // FOR LOOP
    <FOR> repeticiones = expr(procName) <REPEAT_BLOCK> "[" 
        { 
            for (int i = 0; i < repeticiones; i++) {
                if (!interna(sistema, true, 1, procName)) break; // Permitir interrupci√≥n
            }
        } 
        ( <BREAK> "." { return; } | <CONTINUE> "." { continue; } )*
    "]"
}


